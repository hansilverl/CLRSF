@model CurrencyComparisonModel
@using CurrencyComparisonTool.Models

@if (Model.b_convertedAmount > 0)
{
  <div class="container p4-5">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card results-card h-100">
          <div class="card-header bg-white">
            <h5 class="m-0 text-secondary">Bank Conversion</h5>
          </div>
          <div class="card-body">
            <h3 class="card-title mb-2">
              <span class="currency-symbol">@CurrencyConstants.CurrencySymbols[Model.TargetCurrency]</span>@Model.b_convertedAmount.ToString("N1")
            </h3>
            <p class="card-text text-muted mb-0">Including fees and margins</p>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card results-card h-100">
          <div class="card-header bg-white">
            <h5 class="m-0 text-secondary">ClearShift Conversion</h5>
          </div>
          <div class="card-body">
            <h3 class="card-title mb-2 text-success">
              <span class="currency-symbol">@CurrencyConstants.CurrencySymbols[Model.TargetCurrency]</span>@Model.cs_convertedAmount.ToString("N1")
            </h3>
            <p class="card-text text-muted mb-0">Transparent pricing</p>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card results-card h-100">
          <div class="card-header bg-white">
            <h5 class="m-0 text-secondary">Your Savings</h5>
          </div>
          <div class="card-body">
            <h3 class="card-title mb-2 text-primary">
              <span class="currency-symbol">@CurrencyConstants.CurrencySymbols[Model.TargetCurrency]</span>@Model.Savings.ToString("N1")
            </h3>
            <p class="card-text text-muted mb-0">Total potential savings</p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="d-flex justify-content-end gap-3 mt-4">
      <button class="btn btn-success">
        <i class="bi bi-download me-2"></i>Export Results
      </button>
      <button class="btn btn-primary">
        <i class="bi bi-file-earmark-pdf me-2"></i>Download Report
      </button>
    </div>
  </div>
}