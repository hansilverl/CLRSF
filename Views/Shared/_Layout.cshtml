<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClearShift Currency Comparison</title>
    
    <!-- Favicon - supports both .ico and .jpg -->
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">
    <link rel="icon" type="image/jpeg" href="~/images/fav.jpg">
    <link rel="shortcut icon" href="~/images/favicon.ico">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/export.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
        <div class="container">
            <a class="navbar-brand" href="/">
                <!-- ClearShift logo in leftmost corner -->
                <img src="~/images/logo.png" alt="ClearShift" height="32" class="navbar-logo" 
                     onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';">
                <i class="bi bi-currency-exchange text-primary" style="display:none;"></i>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="/">Home</a>
                    <a class="nav-link" href="#features">Features</a>
                    <a class="nav-link" href="#about">About</a>
                    <a class="nav-link" href="/Home/Privacy">Privacy</a>
                </div>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer bg-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="footer-brand">
                        <!-- Footer logo or icon -->
                        <img src="~/images/logo.png" alt="ClearShift" height="24" class="me-2 footer-logo" 
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';">
                        <i class="bi bi-currency-exchange me-2 text-primary" style="display:none;"></i>
                    </div>
                    <p class="text-muted mt-2 mb-0">
                        Compare currency exchange rates and save money on your international transfers.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="footer-links">
                        <a href="/Home/Privacy" class="text-muted me-3">Privacy Policy</a>
                        <a href="#" class="text-muted me-3">Terms of Service</a>
                        <a href="#" class="text-muted">Support</a>
                    </div>
                    <p class="text-muted mt-2 mb-0">
                        © 2024 ClearShift. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    
    <!-- ClearShift Logo Handler -->
    <script src="~/js/logo-handler.js"></script>
    <script src="~/js/utils.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>