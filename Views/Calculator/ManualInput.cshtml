@model CLSF_Compare.Models.InputModel

<form method="post" asp-action="Calculate">
    <label>Date:</label>
    <input type="date" asp-for="Date" required />
    <label>Source Currency:</label>
    <input type="text" asp-for="SourceCurrency" required />
    <label>Target Currency:</label>
    <input type="text" asp-for="TargetCurrency" required />
    <label>Amount:</label>
    <input type="number" asp-for="Amount" required />
    <label>Bank Rate:</label>
    <input type="number" asp-for="BankRate" required step="0.0001" />
    <label>Bank Fees:</label>
    <input type="number" asp-for="BankFees" required step="0.01" />
    <button type="submit">Calculate</button>
</form>
