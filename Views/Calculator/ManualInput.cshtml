@model ManualInputModel

<form asp-action="ManualInput" method="post">
    <label>Date:</label>
    <input type="date" asp-for="TransactionDate" />
    <br />
    <label>Bank Rate:</label>
    <input type="number" step="0.0001" asp-for="BankRate" />
    <br />
    <label>Bank Commission:</label>
    <input type="number" step="0.01" asp-for="BankCommission" />
    <br />
    <label>Source Currency:</label>
    <input type="text" asp-for="SourceCurrency" />
    <br />
    <label>Target Currency:</label>
    <input type="text" asp-for="TargetCurrency" />
    <br />
    <label>Amount:</label>
    <input type="number" step="0.01" asp-for="Amount" />
    <br />
    <button type="submit">Calculate</button>
</form>
