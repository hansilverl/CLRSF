@model CurrencyComparisonModel

<div class="container-fluid py-4 bg-light">
    <div class="container">
        <h1 class="h2 mb-3 text-dark">Currency Conversion Comparison Tool</h1>
        <p class="lead text-muted mb-4">Compare bank conversion costs with ClearShift and see your potential savings</p>

        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="upload-tab" data-bs-toggle="tab" href="#upload" role="tab">
                            <i class="bi bi-upload me-2"></i>Upload Bank File
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="manual-tab" data-bs-toggle="tab" href="#manual" role="tab">
                            <i class="bi bi-pencil me-2"></i>Manual Input
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="custom-tab" data-bs-toggle="tab" href="#custom" role="tab">
                            <i class="bi bi-file-text me-2"></i>Custom Text File
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body tab-content">
                <div class="tab-pane fade" id="upload" role="tabpanel">
                    <div class="text-center p-5 border-dashed">
                        <i class="bi bi-upload h1 text-muted mb-3"></i>
                        <p class="text-muted">Drag and drop your bank file here, or click to browse</p>
                        <button class="btn btn-primary">Select File</button>
                    </div>
                </div>
                <div class="tab-pane fade show active" id="manual" role="tabpanel">
                    <form asp-action="Calculate" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Date" class="form-label">Transaction Date</label>
                                <input asp-for="Date" type="date" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="BankRate" class="form-label">Bank Exchange Rate</label>
                                <input asp-for="BankRate" type="number" step="0.0001" class="form-control" />
                                <span asp-validation-for="BankRate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="BankFees" class="form-label">Bank Fees (%)</label>
                                <div class="input-group">
                                    <input asp-for="BankFees" type="number" step="any" class="form-control" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="BankFees" class="text-danger small"></span>
                            </div>


                            <div class="col-md-6">
                                <label asp-for="Amount" class="form-label">Amount to Convert</label>
                                <input asp-for="Amount" type="number" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SourceCurrency" class="form-label">Source Currency</label>
                                <select asp-for="SourceCurrency" class="form-select">
                                    <option value="USD">USD</option>
                                    <option value="EUR">EUR</option>
                                    <option value="GBP">GBP</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TargetCurrency" class="form-label">Target Currency</label>
                                <select asp-for="TargetCurrency" class="form-select">
                                    <option value="ILS">ILS</option>
                                    <option value="EUR">EUR</option>
                                    <option value="USD">USD</option>
                                </select>
                            </div>
                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="tab-pane fade" id="custom" role="tabpanel">
                    <div class="text-center p-5 border-dashed">
                        <i class="bi bi-file-text h1 text-muted mb-3"></i>
                        <p class="text-muted">Upload your custom text file with conversion details</p>
                        <button class="btn btn-primary">Upload Text File</button>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.b_convertedAmount > 0)
        {
            <div class="row mt-4 g-3">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">Converting through the bank</div>
                        <div class="card-body">
                            <h3 class="card-title text-dark">₪@Model.b_convertedAmount.ToString("N2")</h3>
                            <p class="card-text text-muted">Including all fees and margins</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">Converting through ClearShift</div>
                        <div class="card-body">
                            <h3 class="card-title text-success">₪@Model.cs_convertedAmount.ToString("N2")</h3>
                            <p class="card-text text-muted">Transparent pricing</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">Your Savings</div>
                        <div class="card-body">
                            <h3 class="card-title text-primary">₪@Model.Savings.ToString("N2")</h3>
                            <p class="card-text text-muted">Total potential savings</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4 gap-3">
                <button class="btn btn-outline-secondary">
                    <i class="bi bi-download me-2"></i>Export to Text File
                </button>
                <button class="btn btn-primary">
                    <i class="bi bi-file-earmark-pdf me-2"></i>Download PDF Report
                </button>
            </div>
        }
    </div>
</div>